{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "G-choreography",
	"patterns": [
		{
			"include": "#interactions"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#parens"
		}
	],
	"repository": {
		"interactions": {
			"patterns": [
				{
					"name": "entity.name.function",
					"match": "(\\w+)\\s*->\\s*(\\w+)\\s*:\\s*(\\w+)",
					"captures": {
						"1": {
							"name": "entity.name.type.participant"
						},
						"2": {
							"name": "entity.name.type.participant"
						},
						"3": {
							"name": "entity.name.function.message"
						}
					}
				}
			]
		},
		"keywords": {
			"match": "\\b(sel|repeat)\\b\\s*(\\w+)",
			"name": "keyword",
			"captures": {
				"2": {
					"name": "entity.name.type.participant"
				}
			}
		},
		"comments": {
			"match": "\\.\\..*",
			"name": "comment.line"
		},
		"parens": {
			"begin": "\\(",
			"end": "\\)",
			"patterns": [
				{
					"include": "$self"
				}
			]
		}
	},
	"scopeName": "source.gchor"
}