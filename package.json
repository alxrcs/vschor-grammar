{
    "name": "vschor-grammar",
    "displayName": "vschor-grammar",
    "description": "Syntax highlight for g-choreographies",
    "repository": {
        "url": "https://github.com/alxrcs/vschor-grammar.git"
    },
    "version": "0.0.3",
    "publisher": "alxrcs",
    "engines": {
        "vscode": "^1.65.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./out/extension.js",
    "activationEvents": [
        "onStartupFinished",
        "onLanguage:gc",
        "onLanguage:fsa"
    ],
    "contributes": {
        "commands": [
            {
                "command": "vschor-grammar.genlts",
                "title": "VSChor: Generate LTS from a given FSA",
                "icon": "$(zap)"
            },
            {
                "command": "vschor-grammar.project",
                "title": "VSChor: Generate projections from a given GC",
                "icon": "$(zap)"
            }
        ],
        "configuration": {
            "title": "VSChor",
            "properties": {
                "vschor-grammar.pythonPath": {
                    "type": "string",
                    "default": null,
                    "description": "Specifies the path to the python interpreter that will be used to run chortest."
                },
                "vschor-grammar.chorgramPath": {
                    "type": "string",
                    "default": null,
                    "description": "Specifies the path to the Chorgram folder."
                }
            }
        },
        "languages": [
            {
                "id": "gc",
                "aliases": [
                    "G-choreography",
                    "gc"
                ],
                "extensions": [
                    ".gc"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "fsa",
                "aliases": [
                    "FSA format",
                    "fsa"
                ],
                "extensions": [
                    ".fsa"
                ]
            }
        ],
        "grammars": [
            {
                "language": "gc",
                "scopeName": "source.gchor",
                "path": "./syntaxes/gc.tmLanguage.json"
            },
            {
                "language": "fsa",
                "scopeName": "source.fsa",
                "path": "./syntaxes/fsa.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "gc",
                "path": "./snippets/.code-snippets"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "vschor-grammar.genlts",
                    "group": "navigation",
                    "when": "resourceLangId == fsa"
                },
                {
                    "command": "vschor-grammar.project",
                    "group": "navigation",
                    "when": "resourceLangId == gc"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts"
    },
    "extensionDependencies": [
        "joaompinto.vscode-graphviz"
    ],
    "devDependencies": {
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@types/vscode": "^1.65.0",
        "@types/which": "^3.0.0",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "@vscode/test-electron": "^1.6.2",
        "eslint": "^8.1.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.3",
        "typescript": "^4.4.4"
    },
    "dependencies": {
        "which": "^3.0.1"
    }
}
